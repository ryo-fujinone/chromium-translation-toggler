{
    "manifest_version": 3,
    "name": "Translation Toggler",
    "version": "1.0.0",
    "description": "__MSG_extensionDesc__",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["trigger.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["utils/*"]
        }
    ],
    "options_page": "options.html",
    "action": {},
    "permissions": ["tabs", "storage", "nativeMessaging"]
}
